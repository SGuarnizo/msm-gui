<h1>
  List of all directors
</h1>

<hr>
<form action="/new_director" method="post">
  <div>
    <label for="new_name">Name</label>
    <input id="new_name" type="text" name="director_name_param">
  </div>
  <div>
    <label for="new_dob">Dob</label>
    <input id="new_dob" type="date" name="director_dob_param">
  </div>
  <div>
    <label for="new_bio">Bio</label>
    <input id="new_bio" type="text" name="director_bio_param">
  </div>

  <div>
    <label for="new_image">Image</label>
    <input id="new_image" type="text" name="director_image_param">
  </div>

  <button>Create director</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
