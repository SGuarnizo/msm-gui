<h1>
  List of all actors
</h1>

<hr>

<form action="/new_actor" method="post">
  <div>
    <label for="new_name">Name</label>
    <input id="new_name" type="text" name="actor_name_param">
  </div>
  <div>
    <label for="new_dob">Dob</label>
    <input id="new_dob" type="date" name="actor_dob_param">
  </div>
  <div>
    <label for="new_bio">Bio</label>
    <input id="new_bio" type="text" name="actor_bio_param">
  </div>

  <div>
    <label for="new_image">Image</label>
    <input id="new_image" type="text" name="actor_image_param">
  </div>

  <button>Create actor</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
